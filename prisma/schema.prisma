generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Submission {
  id          String   @id @default(uuid())
  name        String
  role        String
  advice      String
  hiringTrait String
  votes       Int      @default(0)
  color       String   @default("red")
  createdAt   DateTime @default(now())

  @@map("submissions")
}
